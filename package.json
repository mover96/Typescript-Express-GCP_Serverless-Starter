{
  "name": "Typescript-Express-GCP_Serverless-Starter",
  "functionVars": {
    "localFunc": "helloWorldHTTP"
  },
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all build localFunc",
    "test": "npm-run-all lint:test clean build:test start:test",
    "localFunc": "cd ./dist && functions-framework --target=$npm_package_functionVars_localFunc",
    "build": "./node_modules/.bin/npm-run-all lint:functions clean build:functions",
    "test:system": "npm-run-all lint:test:system clean build:test:system start:test:system",
    "HELPERS": "______________________________________________________________",
    "build:functions": "./node_modules/.bin/tsc -p ./tsconfig.functions.json",
    "lint:functions": "./node_modules/.bin/tslint --project ./tsconfig.functions.json --config ./tslint.json",
    "lint:test": "tslint --project ./tsconfig.test.json",
    "lint:test:system": "tslint --project ./tsconfig.system.test.json",
    "build:test": "tsc -p ./tsconfig.test.json",
    "build:test:system": "tsc -p ./tsconfig.system.test.json",
    "start:test": "mocha \"dist/**/tests/*.test.js\" --timeout 4000 --exit",
    "start:test:system": "mocha \"dist/**/tests/*.system.test.js\" --timeout 4000 --exit",
    "clean": "./node_modules/.bin/rimraf ./dist",
    "deploy_helloWorldHTTP": "npm-run-all build deploy_helloWorldHTTPMain",
    "deploy_helloWorldHTTPMain": "gcloud functions deploy helloWorldHTTP --source ./dist --runtime nodejs10 --trigger-http"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.3",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.1.1",
    "@types/assert": "^1.4.2",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.6",
    "@types/sinon": "^7.0.13",
    "@types/sinon-express-mock": "^1.3.7",
    "@types/supertest": "^2.0.8",
    "assert": "^2.0.0",
    "dotenv": "^6.2.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-express-mock": "^2.2.0",
    "supertest": "^4.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.15.0"
  }
}
